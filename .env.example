# ==============================================================================
# RAG QUIZ CONFIGURATION
# Copy this file to .env and update values as needed
# ==============================================================================

# REQUIRED: HuggingFace API Token
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACEHUB_API_TOKEN=your_token_here

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use INFO for production, DEBUG for development
LOG_LEVEL=INFO

# Session management
# Directory for temporary session storage
TEMP_SESSIONS_FOLDER=temp_sessions

# ==============================================================================
# CONVERSATION SETTINGS
# ==============================================================================

# Number of recent messages to use for context refinement
# Higher values = more context but slower processing (recommended: 3-5)
CONVERSATION_HISTORY_MESSAGES=3

# ==============================================================================
# DOCUMENT PROCESSING
# ==============================================================================

# Maximum PDF file size in MB
# Increase based on server memory (default: 50MB)
MAX_FILE_SIZE_MB=50

# Allowed file types (comma-separated, currently only PDF supported)
ALLOWED_FILE_TYPES=pdf
